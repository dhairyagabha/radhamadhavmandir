<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <% @assets = Webmanager::BlogAsset.all %>
  <% if @assets.present? %>
      <ol class="carousel-indicators">
        <% @assets.each_with_index do |asset, index| %>
            <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= (index == 0) ? 'active' : nil %>"></li>
        <% end %>
      </ol>
      <div class="carousel-inner" role="listbox">
        <% @assets.each_with_index do |asset, index| %>
            <div class="carousel-item <%= (index == 0) ? 'active' : nil %>" style="background-image:url('<%= asset.asset.url %>')">
            </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  <% end %>
</div>