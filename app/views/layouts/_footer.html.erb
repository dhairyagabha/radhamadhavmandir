<footer class="footer">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-md-12 col-lg-6">
        <%= image_tag 'welspun-logo.jpg', class: 'rounded mx-auto d-block', style: 'width: 50%;' %>
        <div itemscope itemtype="http://schema.org/ContactPoint">
          <p><h5 class="text-center">Shri Radha Madhav Temple</h5></p>
          <p class="float-left">Phone: <a href="tel:+12402772010" itemprop="telephone">(240)277-2010</a></p>
          <p class="float-right"> Email:
            <a href="mailto:welspuntemple@gmail.com" itemprop="email">welspuntemple@gmail.com</a></p>
          <p class="float-left" itemscope itemtype="schema.org/PostalAddress"> Address:
            <span itemprop="streetAddress">9301 Frazier Pike</span>,
            <span itemprop="addressLocality">Little Rock</span>
            <span itemprop="postalCode">AR-72206</span>
          </p>
        </div>
      </div>
      <div class="col-md-12 col-lg-6">
        <%= form_for(Webmanager::NewsletterReceiver.new, url: 'webmanager/newsletter_receivers', method: 'post') do |f| %>
            <%= f.label :email, 'Sign up for an events newsletter: ' %>
            <%= f.text_field :email, placeholder: "Type your email to get notified",  class: 'form-control' %>
            <%= f.hidden_field :event_notification, value: true %>
            <%= f.submit 'Subscribe', class:'btn btn-primary' %>
        <% end %>
        <p>&copy; <%= Time.current.year %> Radha Madhav Temple &middot; <a href="#">Privacy</a> &middot;
          <a href="#">Terms</a>
        </p>
      </div>
    </div>
  </div>
