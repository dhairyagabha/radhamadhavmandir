<footer class="footer">
  <div class="container">
    <div class="row align-items-end">
      <div class="col-6">
        <%= image_tag 'https://placeimg.com/100/100/arch', class: 'rounded mx-auto d-block' %>
        <div itemscope itemtype="http://schema.org/ContactPoint">
          <p><h5 class="text-center">Shri Radha Madhav Mandir</h5></p>
          <p class="float-left">Phone: <a href="tel:+19374776866" itemprop="telephone">(937)477-6866</a></p>
          <p class="float-right"> Email:
            <a href="mailto:radhamadhavmandir@gmail.com" itemprop="email">radhamadhavmandir@gmail.com</a></p>
          <p class="float-left" itemscope itemtype="schema.org/PostalAddress"> Address:
            <span itemprop="streetAddress">9301 Frazier Pike</span>,
            <span itemprop="addressLocality">Little Rock</span>
            <span itemprop="postalCode">AR-72206</span>
          </p>
        </div>
      </div>
      <div class="col-6">
        <%= form_tag('webmanager/newsletter_receivers', method: 'post') do -%>
            <div class="form-group">
              <%= label_tag :email,'Sign up for an events newsletter: ' %>
              <%= email_field_tag :email, nil, placeholder: "Type your email to get notified", class: 'form-control' %>
              <%= hidden_field_tag :event_notification, true %>
            </div>
            <div class="form-group">
              <%= submit_tag 'Submit', class: 'btn btn-primary' %>
            </div>
        <% end -%>
        <p>&copy; <%= Time.current.year %> Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a>
        </p>
      </div>
    </div>
